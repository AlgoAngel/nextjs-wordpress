{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "NEXT_PUBLIC_WORDPRESS_URL",
        "PREVIEW_SECRET_TOKEN",
        "WORDPRESS_USERNAME",
        "WORDPRESS_PASSWORD",
        "DISABLE_STATIC_SITE_GENERATION"
      ]
    },
    "lint": {
      "outputs": [],
      "env": [
        "NEXT_PUBLIC_WORDPRESS_URL",
        "PREVIEW_SECRET_TOKEN",
        "WORDPRESS_USERNAME",
        "WORDPRESS_PASSWORD",
        "DISABLE_STATIC_SITE_GENERATION"
      ]
    },
    "dev": {
      "cache": false
    }
  }
}
