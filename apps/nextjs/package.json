{
  "name": "nextjs-wordpress",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "rimraf .next && next dev",
    "format": "npx prettier '**/*.{js,jsx,ts,tsx,md,mdx,html,css,scss,json,yml}' --write || true",
    "lint": "npm run format && npm run lint:js && npm run lint:css && npm run type-check",
    "lint:css": "npx stylelint '**/*.css' --fix || true",
    "lint:js": "npx eslint '**/*.{js,ts,jsx,tsx}' --fix || true && next lint",
    "start": "next start",
    "type-check": "tsc"
  },
  "dependencies": {
    "@apollo/client": "^3.6.9",
    "graphql": "^16.6.0",
    "html-react-parser": "^3.0.4",
    "isomorphic-dompurify": "^0.22.0",
    "next": "^12.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.36.1",
    "react-icons": "^4.4.0"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.1.1",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.7",
    "@types/node": "^18.7.23",
    "@types/react": "^18.0.21",
    "autoprefixer": "^10.4.12",
    "eslint-config-custom": "*",
    "postcss": "^8.4.16",
    "prettier-config-custom": "*",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "rimraf": "^3.0.2",
    "sharp": "^0.31.0",
    "stylelint-config-custom": "*",
    "tailwindcss": "^3.1.8",
    "tsconfig": "*",
    "typescript": "^4.8.4"
  }
}
