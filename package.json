{
  "name": "next-wordpress-with-apollo",
  "description": "Next.js + WordPress with Apollo Client",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregrickaby/nextjs-wordpress-with-apollo.git"
