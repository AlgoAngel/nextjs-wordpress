  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gregrickaby/nextjs-wordpress-with-apollo/issues"
  },
  "homepage": "https://github.com/gregrickaby/nextjs-wordpress-with-apollo#readme",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "rimraf .next && next dev",
    "format": "npx prettier '**/*.{js,jsx,ts,tsx,md,mdx,html,css,scss,json,yml}' --config=.prettierrc.js --write || true",
    "lint": "npm run format && npm run lint:js && npm run lint:css && npm run lint:md && npm run type-check",
    "lint:css": "npx stylelint '**/*.css' --config=.stylelintrc.js --fix || true",
    "lint:js": "npx eslint '**/*.{js,ts,jsx,tsx}' --fix || true && next lint",
    "lint:md": "npx markdownlint '**/*.{md,mdx}' --fix",
    "start": "next start",
    "type-check": "tsc"
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "graphql": "^16.3.0",
    "hint": "^6.1.10",
    "html-dom-parser": "^1.1.1",
    "html-react-parser": "^1.4.9",
    "html2json": "^1.0.2",
    "htmlparser2": "^7.2.0",
    "isomorphic-dompurify": "^0.18.0",
    "next": "12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.28.1"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "autoprefixer": "^10.4.4",
    "eslint": "^8.11.0",
    "eslint-config-next": "^12.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "markdownlint": "^0.25.1",
    "markdownlint-cli": "^0.31.1",
    "postcss": "^8.4.12",
    "prettier": "^2.6.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "rimraf": "^3.0.2",
    "sharp": "^0.30.3",
    "stylelint": "^14.6.1",
    "stylelint-config-standard": "^25.0.0",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.3"
  }
}
